# ============================================
# Mosqit Environment Configuration
# ============================================
# Copy this file to .env.local for local development
# Never commit .env.local to version control

# --------------------------------------------
# Core Configuration
# --------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Mosqit
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --------------------------------------------
# Chrome Extension Configuration
# --------------------------------------------
EXTENSION_ID=your_extension_id_here
CHROME_CANARY_PATH=C:\Program Files\Google\Chrome Canary\Application\chrome.exe
CHROME_FLAGS=--enable-experimental-web-platform-features --enable-features=WebAI,AIPromptAPI,AISummarizationAPI,AIWriterAPI,AIRewriterAPI

# --------------------------------------------
# GitHub OAuth Configuration
# --------------------------------------------
# Create OAuth App: https://github.com/settings/applications/new
# Homepage URL: http://localhost:3000
# Callback URL: http://localhost:3000/api/auth/github/callback
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/github/callback
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Default repository for testing (optional)
GITHUB_DEFAULT_OWNER=yourusername
GITHUB_DEFAULT_REPO=test-repo

# --------------------------------------------
# Firebase Configuration (Optional - for Mobile Dashboard)
# --------------------------------------------
# Get from Firebase Console: https://console.firebase.google.com
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin (Server-side only)
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# --------------------------------------------
# Chrome Built-in AI APIs Configuration
# --------------------------------------------
# Chrome AI Early Preview Program credentials
CHROME_AI_ORIGIN_TRIAL_TOKEN=your_origin_trial_token
CHROME_AI_API_KEY=your_chrome_ai_api_key_if_required

# API Rate Limits (requests per minute)
AI_PROMPT_API_RATE_LIMIT=60
AI_WRITER_API_RATE_LIMIT=30
AI_REWRITER_API_RATE_LIMIT=30
AI_TRANSLATOR_API_RATE_LIMIT=60
AI_SUMMARIZER_API_RATE_LIMIT=30

# --------------------------------------------
# Storage Configuration
# --------------------------------------------
# IndexedDB Configuration
INDEXEDDB_NAME=mosqit_storage
INDEXEDDB_VERSION=1
MAX_STORAGE_SIZE_MB=50
COMPRESSION_ENABLED=true
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY=your_32_character_encryption_key

# --------------------------------------------
# Authentication & Security
# --------------------------------------------
# Session Configuration
SESSION_SECRET=your_session_secret_at_least_32_chars
SESSION_COOKIE_NAME=mosqit_session
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# JWT Configuration
JWT_SECRET=your_jwt_secret_at_least_32_chars
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://your_extension_id
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Extension-Id

# --------------------------------------------
# API Configuration
# --------------------------------------------
# API Base URLs
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
CHROME_EXTENSION_API_URL=chrome-extension://your_extension_id

# API Keys for third-party services (if needed)
OPENAI_API_KEY=sk-your_openai_key_if_fallback_needed
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_if_needed

# --------------------------------------------
# Logging & Analytics
# --------------------------------------------
# Logging Level: error | warn | info | debug
LOG_LEVEL=debug
ENABLE_ANALYTICS=false

# Sentry (Optional - for error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=mosqit

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# --------------------------------------------
# Development Tools
# --------------------------------------------
# Hot Reload
NEXT_PUBLIC_HOT_RELOAD_EXTENSION=true
NEXT_PUBLIC_HOT_RELOAD_DASHBOARD=true

# Debug Mode
DEBUG_MODE=true
DEBUG_AI_APIS=true
DEBUG_GITHUB_API=true
DEBUG_STORAGE=true

# Mock Mode (for testing without real APIs)
USE_MOCK_AI_APIS=false
USE_MOCK_GITHUB_API=false
USE_MOCK_FIREBASE=false

# --------------------------------------------
# Localization
# --------------------------------------------
# Default Language
DEFAULT_LOCALE=en-US

# Supported Languages (comma-separated)
SUPPORTED_LOCALES=en-US,es-ES,hi-IN,zh-CN,fr-FR

# Translation API (if using external service)
TRANSLATION_API_KEY=your_translation_api_key

# --------------------------------------------
# Voice Input Configuration
# --------------------------------------------
# Web Speech API Configuration
SPEECH_RECOGNITION_LANG=en-US
SPEECH_RECOGNITION_CONTINUOUS=true
SPEECH_RECOGNITION_INTERIM_RESULTS=true

# --------------------------------------------
# Performance Configuration
# --------------------------------------------
# Image Processing
MAX_SCREENSHOT_WIDTH=512
MAX_SCREENSHOT_HEIGHT=512
IMAGE_COMPRESSION_QUALITY=0.8

# Cache Configuration
CACHE_TTL_SECONDS=3600  # 1 hour
MAX_CACHE_SIZE_MB=10

# Request Timeouts (milliseconds)
API_TIMEOUT=30000
GITHUB_API_TIMEOUT=15000
AI_API_TIMEOUT=60000

# --------------------------------------------
# Mobile Dashboard Configuration
# --------------------------------------------
NEXT_PUBLIC_MOBILE_DASHBOARD_URL=https://mosqit-dashboard.vercel.app
ENABLE_PWA=true
ENABLE_PUSH_NOTIFICATIONS=false

# --------------------------------------------
# Testing Configuration
# --------------------------------------------
# Test Environment
TEST_MODE=false
TEST_GITHUB_REPO=test-repo
TEST_USER_EMAIL=test@example.com

# Sample Projects for Testing
SAMPLE_REACT_REPO=https://github.com/sample/react-app
SAMPLE_VUE_REPO=https://github.com/sample/vue-app
SAMPLE_SVELTE_REPO=https://github.com/sample/svelte-app

# --------------------------------------------
# Deployment Configuration
# --------------------------------------------
# Vercel Configuration (for Next.js dashboard)
VERCEL_URL=https://mosqit.vercel.app
VERCEL_ENV=production

# Chrome Web Store Configuration
CHROME_STORE_APP_ID=your_chrome_store_app_id
CHROME_STORE_CLIENT_ID=your_chrome_store_client_id
CHROME_STORE_CLIENT_SECRET=your_chrome_store_client_secret
CHROME_STORE_REFRESH_TOKEN=your_chrome_store_refresh_token

# --------------------------------------------
# Feature Flags
# --------------------------------------------
FEATURE_CUSTOM_LOGGER=true
FEATURE_DEVTOOLS_INTEGRATION=true
FEATURE_AI_ISSUES=true
FEATURE_OFFLINE_MODE=true
FEATURE_MOBILE_DASHBOARD=true
FEATURE_VOICE_INPUT=true
FEATURE_LOCALIZATION=true
FEATURE_PATTERN_DETECTION=false
FEATURE_TEAM_COLLABORATION=false
FEATURE_AUTONOMOUS_DEBUGGING=false

# --------------------------------------------
# Hackathon Specific
# --------------------------------------------
HACKATHON_MODE=true
HACKATHON_DEMO_MODE=false
HACKATHON_JUDGE_ACCESS_TOKEN=judge_access_token_here
HACKATHON_SUBMISSION_URL=https://devpost.com/software/mosqit

# ============================================
# End of Configuration
# ============================================