{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./dist/extension",
    "rootDir": "./src/extension",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": false,
    "removeComments": true
  },
  "include": [
    "src/extension/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}